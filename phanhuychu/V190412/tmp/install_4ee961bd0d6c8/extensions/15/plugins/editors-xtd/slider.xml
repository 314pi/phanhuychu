<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install type="plugin" group="editors-xtd" version="1.5">
	<name>Button - Slider</name>
	<description>PLG_EDITORS-XTD_SLIDER_DESC</description>
	<version>1.7.1</version>
	<creationDate>October 2011</creationDate>
	<author>NoNumber! (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2011 NoNumber! All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="slider">slider.php</filename>
		<folder>slider</folder>
	</files>

	<!-- Parameters -->
	<params addpath="/plugins/system/nnframework/fields">
		<param name="@loadlanguage" type="nn_loadlanguage" extension="plg_editors-xtd_slider" />
		<param name="@license" type="nn_license" extension="SLIDER" />
		<param name="@version" type="nn_version" extension="SLIDER" xml="/plugins/editors-xtd/slider.xml" />
		<param name="@dependency" type="nn_dependency"
			label="SLD_THE_SYSTEM_PLUGIN"
			file="/plugins/system/slider.php" />
		<param name="@header" type="nn_header"
			label="SLIDER"
			description="SLIDER_DESC"
			xml="/plugins/editors-xtd/slider.xml"
			image="/plugins/editors-xtd/slider/images/logo.png"
			image_w="60" image_h="80"
			url="http://www.nonumber.nl/slider"
			help_url="http://www.nonumber.nl/slider" />
	</params>
</install>