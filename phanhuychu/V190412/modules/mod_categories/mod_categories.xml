    <files>
           <filename module="mod_categories">mod_categories.php</filename>
           <filename module="mod_categories">helper.php</filename>
    </files>
	<params>
	 		<param name="show_page_title" type="radio" default="1" label="Section title" description="Show/Hide the Section Title">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
		<param name="id" type="section" default="" label="Section (Don't select for auto section)" description="Section (Don't select for auto selection)"/>
		<param name="pageclass_sfx" type="text" size="20" default="" label="Page Class Suffix" description="PARAMPAGECLASSSFX" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="show_description" type="radio" default="0" label="Description" description="Show/Hide the Section Description">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
			<param name="show_description_image" type="radio" default="0" label="Description Image" description="Show/Hide the Section Description">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>

			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="show_categories" type="radio" default="1" label="Category List - Section" description="PARAMOTHERCATSECTION">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_empty_categories" type="radio" default="0" label="Empty Categories in Section" description="Show/Hide empty(no items) categories in Section view">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_cat_num_articles" type="radio" default="1" label="Num Category Items" description="PARAMCATITEMS">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_category_description" type="radio" default="1" label="Category Description" description="PARAMSHOWHIDE">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
		</params>
		<params  group="advanced">
			<param name="orderby" type="list" default="" label="Order by" description="PARAMORDERBY">
				<option value="">Default</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
				<option value="1">Use global</option>
				<option value="0">No caching</option>
			</param>
		</params>
</install>